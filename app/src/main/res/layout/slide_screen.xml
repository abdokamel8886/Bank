<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nex"
    android:elevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:layout_weight="1"
        android:backgroundTint="@color/beige"
        app:cardCornerRadius="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn"
            android:text="Skip"
            android:paddingHorizontal="20dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
                />

        <ImageView
     android:id="@+id/slide_screen_image"
        android:layout_width="241dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/storyboarding1" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to you,"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/dark"
        android:textSize="24sp"
       />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="133dp"
         android:gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="This application will help you  booking number in the queue of your bank, By suggesting the nearest  branches for your location."
        android:textColor="@color/grey"
        android:textSize="18sp"
       />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:gravity="center">


    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/ic_back" />


    <ImageView
        android:id="@+id/ind1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/selected"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/ind2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/selected"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/ind3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/selected"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_next" />
</LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>