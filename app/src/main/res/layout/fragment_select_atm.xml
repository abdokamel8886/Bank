<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.atm.SelectAtmFragment">

    <LinearLayout
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        tools:context=".select_atm">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/beige"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20sp"
                    android:layout_marginTop="30sp"
                    android:layout_gravity="center"
                    android:textColor="@color/dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="Choose Service Type"
                    />

                <ImageView
                    android:layout_width="241dp"
                    android:layout_height="172dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/select_atm"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="15dp"/>

                <Button
                    android:id="@+id/cash_withdrawel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn"
                    app:backgroundTint="@color/green"
                   android:layout_marginHorizontal="40sp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Cash withdrawel"
                    android:layout_marginTop="20dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/deposit_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40sp"
                    android:background="@drawable/btn"
                    app:backgroundTint="@color/green"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Deposit Money"
                    android:layout_marginTop="30dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>