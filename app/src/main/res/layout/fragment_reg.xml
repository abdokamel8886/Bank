<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".ui.auth.reg.RegFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        android:layout_weight="1"
        android:backgroundTint="@color/beige"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Sign Up"
                android:layout_gravity="center"
                android:textColor="@color/dark"
                android:textSize="36sp"
                android:textStyle="bold"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:layout_marginHorizontal="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:ems="30"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:textColorHint="@color/grey2"
                    tools:ignore="TouchTargetSizeCheck">


                    <EditText
                        android:id="@+id/input_emmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="10dp"
                        android:hint="Enter email or username"
                        android:background="@color/grey1"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColorHint="@color/grey2"
                        tools:ignore="SpeakableTextPresentCheck">

                    </EditText>


                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp" >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_paasword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:ems="30"
                    android:textColorHint="@color/grey2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

                    tools:ignore="TouchTargetSizeCheck"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/input_paswoordd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/keyy"
                        android:drawablePadding="10dp"
                        android:hint="Enter password"
                        android:background="@color/grey1"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColorHint="@color/grey2"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp" >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:ems="30"
                    android:textColorHint="@color/grey2"
                    tools:ignore="TouchTargetSizeCheck"
                    app:passwordToggleEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:drawableLeft="@drawable/key"
                    android:drawableRight="@drawable/ic_eye"  >

                    <EditText
                        android:id="@+id/input_confiirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/keyy"
                        android:drawablePadding="10dp"
                        android:hint="@string/enter_confirm_password"
                        android:background="@color/grey1"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColorHint="@color/grey2"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp" >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"

                    android:textColorHint="@color/grey2"
                    >

                    <EditText
                        android:id="@+id/input_phoone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_call"
                        android:drawablePadding="10dp"
                        android:hint="Enter your phone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:background="@color/grey1"
                        android:digits="0123456789"
                        android:padding="10dp"
                        android:textColorHint="@color/grey2"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/sign_button_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                app:backgroundTint="@color/green"
                android:paddingHorizontal="50dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="OR"
                android:layout_gravity="center"
                android:textColor="@color/dark"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center">


                <ImageButton
                    android:id="@+id/google_sign"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="30dp"
                    app:srcCompat="@drawable/google"
                    tools:ignore="SpeakableTextPresentCheck" />
                <ImageButton
                    android:id="@+id/twitter_sign"
                    android:layout_width="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/twitter"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <ImageButton
                    android:id="@+id/face_sign"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/facebook"
                    tools:ignore="SpeakableTextPresentCheck"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="@color/grey2"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/login_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Log in"
                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>