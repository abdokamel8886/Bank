<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screenshot.ScreenFragment">

    <LinearLayout
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".choose_service"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our dear customer, Booking has been completed successfully"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginTop="20dp"   >


        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code:"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/dark"
            android:layout_gravity="center"></TextView>

        <TextView
            android:id="@+id/code_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="54327"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/dark"
            ></TextView>
        <TextView
            android:id="@+id/date_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/2/2022"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please, Go to branch on time:"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/dark"
            ></TextView>
        <TextView
            android:id="@+id/time_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:45 PM"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/dark"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/des"
            android:textStyle="bold"
            android:layout_marginHorizontal="50sp"
            android:gravity="center"
            android:text="Type : dddddddfdfddffddfd money : gfdfffffffff"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:layout_marginTop="10dp"
            ></TextView>
        <TextView
            android:id="@+id/waiting_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="we will notifiy you, when your turn close!"
            android:textColor="@color/grey"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp">

        </TextView>
        <Button
            android:id="@+id/take_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            app:backgroundTint="@color/green"
            android:paddingHorizontal="50dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:text="@string/take_screen_shot"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>